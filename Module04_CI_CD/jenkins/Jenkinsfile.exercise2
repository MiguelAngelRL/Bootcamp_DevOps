pipeline {
    agent {
        docker {
            image 'gradle:6.6.1-jre14-openj9'
        }
    }

    stages {
        stage('Java Compile') {
            steps {
                dir('./Module04_CI_CD/jenkins/calculator'){
                    sh './gradlew compileJava'
                }
            }
        }

        stage('Java Unit Tests') {
            steps {
                dir('./Module04_CI_CD/jenkins/calculator'){
                    sh './gradlew test'
                }
            }
        }
    }
}